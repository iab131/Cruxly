generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  bio       String?
  image     String?  // For avatar
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  setProblems Problem[] @relation("Setter")

  @@map("users")
}

model Problem {
  id          String   @id @default(uuid())
  name        String
  grade       String
  gym         String   // Storing as string for now to match mock data simple structure
  type        String   // "Boulder", "Sport"
  image       String   // URL
  description String?
  setterId    String?  @map("setter_id") // Optional because existing mock data has builders like "Staff"
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  setter      User?    @relation("Setter", fields: [setterId], references: [id])

  @@map("problems")
}
